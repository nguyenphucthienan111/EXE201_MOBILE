<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".EverquillApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EverquillApp"
        android:usesCleartextTraffic="true">
        
        <!-- Splash Activity - Entry Point -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EverquillApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.EverquillApp.NoActionBar" />
        
        <!-- Register Activity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/Theme.EverquillApp.NoActionBar" />
        
        <!-- Verify Email Activity -->
        <activity
            android:name=".activities.VerifyEmailActivity"
            android:theme="@style/Theme.EverquillApp.NoActionBar" />
        
        <!-- Main Activity - Journal List -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.EverquillApp" />
        
        <!-- Journal Editor Activity -->
        <activity
            android:name=".activities.JournalEditorActivity"
            android:exported="false"
            android:theme="@style/Theme.EverquillApp"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Profile Activity -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.EverquillApp" />
        
        <!-- Dashboard Activity -->
        <activity
            android:name=".activities.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.EverquillApp" />
        
        <!-- Premium Activity -->
        <activity
            android:name=".activities.PremiumActivity"
            android:exported="false"
            android:theme="@style/Theme.EverquillApp" />

        <!-- Payment Result Deep Links -->
        <activity
            android:name=".activities.PaymentResultActivity"
            android:exported="true"
            android:theme="@style/Theme.EverquillApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="everquill" android:host="payment" android:path="/success" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="everquill" android:host="payment" android:path="/cancel" />
            </intent-filter>
        </activity>
        
        <!-- Template Chooser Activity -->
        <activity
            android:name=".activities.TemplateChooserActivity"
            android:exported="false"
            android:theme="@style/Theme.EverquillApp" />
        
        <!-- Notification Activity -->
        <activity
            android:name=".activities.NotificationActivity"
            android:exported="false"
            android:theme="@style/Theme.EverquillApp" />
        
        <!-- Reviews Activity -->
        <activity
            android:name=".activities.ReviewsActivity"
            android:exported="false"
            android:theme="@style/Theme.EverquillApp" />
            
    </application>

</manifest>